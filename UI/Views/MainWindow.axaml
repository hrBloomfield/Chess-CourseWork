                <Image Source="avares://UI/Assets/BishopW.png"/>
                <Image Source="avares://UI/Assets/QueenW.png"/>
                <Image Source="avares://UI/Assets/KingW.png"/>
                <Image Source="avares://UI/Assets/BishopW.png"/>
                <Image Source="avares://UI/Assets/KnightW.png"/>
                <Image Source="avares://UI/Assets/RookW.png"/>
